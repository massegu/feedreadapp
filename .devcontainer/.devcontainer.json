{
  "name": "feedreadapp",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000, 8000],
  "postCreateCommand": "npm install --prefix frontend && pip install --no-cache-dir -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteEnv": {
    "FASTAPI_PORT": "8000",
    "REACT_PORT": "3000"
  }
}
